<div class="position2 box3">
    <div class="card_list">
        <h2>카드 상세 보기</h2>

        <% if (data.card_type === "1") { %>
          <img src="/image/christmascard_1.png" alt="크리스마스 카드 1" class="card_image" />
        <% } else if (data.card_type === "2") { %>
          <img src="/image/christmascard_2.png" alt="크리스마스 카드 2" class="card_image" />
        <% } else if (data.card_type === "3") { %>
          <img src="/image/christmascard_3.png" alt="크리스마스 카드 3" class="card_image" />
        <% } else if (data.card_type === "4") { %>
          <img src="/image/christmascard_4.png" alt="크리스마스 카드 4" class="card_image" />
        <% } %>

        <div class="card_detail">
            <% if (data.from_name === user?.nickname) { %>
              <p><%= data.to_name %></p>
            <% } else { %>
              <p><%= data.from_name %></p>
            <% } %>

            <% if (data.from_name === user?.nickname && !data.confirmed) { %>
              <!-- 내가 보낸 카드면 수정 가능 -->
                <form method="post" action="/card/detail/<%= data._id %>">
                <textarea name="content" rows="5" cols="40"><%= data.content %></textarea><br />
                <button type="submit">수정하기</button>
              </form>
            <% } else { %>
              <!-- 받은 카드면 읽기 전용 -->
              <p><%= data.content %></p>
            <% } %>
        </div>
    </div>
</div>